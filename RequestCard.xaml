<UserControl x:Class="EduPro.RequestCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EduPro"
             xmlns:converter="clr-namespace:EduPro.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="160" d:DesignWidth="500">
    <UserControl.Resources>
        <converter:IntToVisibilityConverter x:Key="IntToVisibilityConverter"/>
    </UserControl.Resources>
    <Border BorderBrush="Black" Margin="10 5 5 5" BorderThickness="3">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0">
                <Label Content="Номер"/>
                <Label Content="{Binding Id}"/>
                <Label Content="ФИО"/>
                <Label Content="{Binding User.FullName}"/>
                <Label Content="Название курса"/>
                <Label Content="{Binding Course.Name}"/>
            </StackPanel>
            <StackPanel Grid.Column="1">
                <Label Content="Дата подачи"/>
                <Label Content="{Binding Date}"/>
                <Label Content="Статус"/>
                <Label Content="{Binding RequestStatus.Name}"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
