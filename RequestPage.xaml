<Page x:Class="EduPro.RequestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EduPro"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Заявки"
      Loaded="Page_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#F5F5F5" Padding="10">
            <StackPanel Orientation="Horizontal">
                <Button x:Name="BackButton" Content="← Назад" Click="BackButton_Click" Width="80" Height="25" ToolTip="Вернуться назад"/>

                <TextBlock Text="Поиск:" VerticalAlignment="Center" Margin="20,0,5,0"/>
                <TextBox x:Name="SearchTextBox" Width="200" Height="25" TextChanged="SearchTextBox_TextChanged" Padding="3" ToolTip="ФИО клиента или № заявки"/>

                <TextBlock Text="Статус:" VerticalAlignment="Center" Margin="20,0,5,0"/>
                <ComboBox x:Name="StatusFilterComboBox" Width="150" Height="25" DisplayMemberPath="Name" SelectionChanged="StatusFilterComboBox_SelectionChanged"/>

                <TextBlock Text="Сортировка:" VerticalAlignment="Center" Margin="20,0,5,0"/>
                <Button x:Name="SortButton" Content="По дате" Click="SortButton_Click"  Width="100" Height="25"/>

                <Button x:Name="CreateButton" Content="+ Новая заявка"  Click="CreateButton_Click"  Width="120" Height="25" Margin="20,0,0,0" Background="#4CAF50" Foreground="White" FontWeight="Bold" ToolTip="Создать новую заявку"/>
            </StackPanel>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="RequestitemControl">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <local:RequestCard/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>